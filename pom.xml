            <dependency>
                <groupId>com.paytronix.utils</groupId>
                <artifactId>interchange-base</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paytronix.utils</groupId>
                <artifactId>lift</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paytronix.utils</groupId>
